---
// src/pages/authors/[id].astro

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { authors, type Author, getAvatarUrl } from '../../data/authors';
import { sortByDate, filterDrafts, buildUrl } from '../../utils';

export function getStaticPaths() {
  return Object.values(authors).map((author) => ({
    params: { id: author.id },
    props: { author },
  }));
}

interface Props {
  author: Author;
}

const { author } = Astro.props;

// Get posts by this author
const allPosts = await getCollection('posts');
const authorPosts = sortByDate(
  filterDrafts(allPosts).filter(
    (post) => post.data.author.toLowerCase() === author.name.toLowerCase()
  )
);
---

<BaseLayout title={author.name} description={author.bio}>
  <section class="py-12 lg:py-16">
    <div class="container-custom">
      <!-- Author Header -->
      <header class="max-w-3xl mx-auto text-center mb-12">
        <!-- Avatar -->
        <div class="w-24 h-24 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center overflow-hidden mx-auto mb-6">
          {author.avatar ? (
            <img src={getAvatarUrl(author.avatar)} alt={author.name} class="w-full h-full object-cover" />
          ) : (
            <span class="text-3xl font-bold text-primary-600 dark:text-primary-400">
              {author.name.charAt(0)}
            </span>
          )}
        </div>

        <!-- Name & Role -->
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2">
          {author.name}
        </h1>
        <p class="text-lg text-primary-600 dark:text-primary-400 mb-4">{author.role}</p>

        <!-- Bio -->
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          {author.bio}
        </p>

        <!-- Social Links -->
        {author.social && (
          <div class="flex justify-center gap-4 mt-6">
            {author.social.twitter && (

              <a href={author.social.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors"
                aria-label="Twitter"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                </svg>
              </a>
            )}
            {author.social.github && (

               <a href={author.social.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors"
                aria-label="GitHub"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"></path>
                </svg>
              </a>
            )}
            {author.social.linkedin && (

               <a href={author.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors"
                aria-label="LinkedIn"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                </svg>
              </a>
            )}
            {author.social.website && (

              <a href={author.social.website}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors"
                aria-label="Website"
              >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                </svg>
              </a>
            )}
          </div>
        )}
      </header>

      <!-- Author's Posts -->
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
          Posts by {author.name}
          <span class="text-gray-500 dark:text-gray-400 font-normal text-lg ml-2">
            ({authorPosts.length})
          </span>
        </h2>

        {authorPosts.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {authorPosts.map((post) => (
              <PostCard
                title={post.data.title}
                slug={post.slug}
                description={post.data.description}
                pubDate={post.data.pubDate}
                author={post.data.author}
                tags={post.data.tags}
                image={post.data.image}
              />
            ))}
          </div>
        ) : (
          <p class="text-gray-600 dark:text-gray-400">No posts yet.</p>
        )}
      </div>
    </div>
  </section>
</BaseLayout>